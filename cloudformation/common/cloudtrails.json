{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudTrails Stack",
  "Parameters": {
    "S3CloudTrailBucket": {
      "Description": "The S3 bucket where you will log CloudTrail logs",
      "Type": "String",
      "Default": ""
    }
  },
  "Mappings": {},
  
  "Conditions": {},
  
  "Resources": {
    "CloudTrailBucketPolicy" : {
      "Type" : "AWS::S3::BucketPolicy",
      "Properties" : {
        "Bucket" : {"Ref" : "S3CloudTrailBucket"},
        "PolicyDocument" : {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AWSCloudTrailAclCheck",
              "Effect": "Allow",
              "Principal": { "Service":"cloudtrail.amazonaws.com"},
              "Action": "s3:GetBucketAcl",
              "Resource": { "Fn::Join" : ["", ["arn:aws:s3:::", {"Ref":"S3CloudTrailBucket"}]]}
            },
            {
              "Sid": "AWSCloudTrailWrite",
              "Effect": "Allow",
              "Principal": { "Service":"cloudtrail.amazonaws.com"},
              "Action": "s3:PutObject",
              "Resource": { "Fn::Join" : ["", ["arn:aws:s3:::", {"Ref":"S3CloudTrailBucket"}, "/AWSLogs/", {"Ref":"AWS::AccountId"}, "/*"]]},
              "Condition": {
                "StringEquals": {
                  "s3:x-amz-acl": "bucket-owner-full-control"
                }
              }
            }
          ]
        }
      }
    },
    "OpsAuditTrail" : {
      "DependsOn" : ["CloudTrailBucketPolicy"],
      "Type" : "AWS::CloudTrail::Trail",
      "Properties" : {
        "S3BucketName" : {"Ref":"S3CloudTrailBucket"},
        "IsLogging" : "true",
        "IncludeGlobalServiceEvents": "true",
        "IsMultiRegionTrail": "true"
      }
    } 
  },
  "Outputs": {
    "OpsAuditTrail": {
      "Description": "Resource name for Ops Audit Trail CloudTrail log bucket.",
      "Value": {
        "Ref": "OpsAuditTrail"
      }
    }
  }
}
